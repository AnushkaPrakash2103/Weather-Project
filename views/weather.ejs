<%- include("header") -%>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-md-4 col-sm-12 col-xs-12"> 
               <div class="card p-4">    
                
                   <div class="d-flex">
                       <h6 class="flex-grow-1"><%= cityName %></h6>
                       <h6><%= country %></h6>
                   </div>
                    
                   <div class="d-flex flex-column temp mt-5 mb-3">
                       <h1 class="mb-0 font-weight-bold" id="heading"> <%= temp %> &deg; C </h1>
                       <span class="small grey"><%= descrip %></span>
                   </div>
                   
                   <div class="d-flex">
                       <div class="temp-details flex-grow-1">
                            <p class="my-1">
                                <img src="https://i.imgur.com/B9kqOzp.png" height="17px" >
        
                               <span> <%= windy%> km/h  </span>
                            </p>

                            <p class="my-1"> 
                               <i class="fa fa-tint mr-2" aria-hidden="true"></i>
                               <span> <%= humid %>% </span> 
                            </p>
                            <p class="my-1"> 
                                <img src="images/therm.png" height="17px" >
                                <span><%= min %> &deg;C </span>
                            </p>
                            <p class="my-1"> 
                                <img src="images/max2.png" height="17px" style="padding: 0 2px;">
                                <span><%= max %> &deg;C </span>
                            </p>
                       </div>
                       
                       <div>
                           <img src=<%= img %> width="125px">
                       </div>
                       
                       
                   </div>
                    
      
                </div>
        </div>
    </div>


</div>
<%- include("footer") -%>